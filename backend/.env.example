# FastAPI Backend Configuration
# Copy this file to .env and fill in your values

# Groq LLM Configuration
# Get API key from https://console.groq.com/
GROQ_API_KEY=gsk-your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Qdrant Vector Database Configuration
# For local Qdrant (Docker):
QDRANT_URL=http://localhost:6333
# For Qdrant Cloud (optional - uncomment and fill):
# QDRANT_URL=https://your-cloud-url.qdrant.io
# QDRANT_API_KEY=your-qdrant-cloud-api-key

# Neon PostgreSQL Database Configuration
# Get connection string from Neon console
DATABASE_URL=postgresql://user:password@epic-darkness-12345.us-east-2.aws.neon.tech/neondb

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Better-Auth Configuration
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your-super-secret-key-minimum-32-characters-long

# Google OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# FastEmbed Configuration (local embeddings)
# BAAI/bge-small-en-v1.5 (384 dimensions, lightweight)
FASTEMBED_MODEL=BAAI/bge-small-en-v1.5

# Qdrant Collection Names
QDRANT_COLLECTION=physical_ai_textbook
