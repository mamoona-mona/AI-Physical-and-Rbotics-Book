# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Neon PostgreSQL Configuration
# Get this from your Neon dashboard
DATABASE_URL=postgresql://user:password@ep-xyz.us-east-1.aws.neon.tech/ai_humanoid_book?sslmode=require

# Qdrant Cloud Configuration
# Get this from your Qdrant Cloud dashboard
QDRANT_URL=https://xxxxx-xxxxx.gcp.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=physical_ai_textbook

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Docusaurus Custom API URL (for ChatWidget)
DOCUSAURUS_CUSTOM_API_URL=http://localhost:8000/api/v1
